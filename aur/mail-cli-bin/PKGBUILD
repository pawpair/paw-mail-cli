# Maintainer: pawpair <packages@pawpair.com>
pkgname=mail-cli-bin
pkgver=0.1.0-alpha.2
pkgrel=1
pkgdesc="Command-line interface for the Paw Mail email client"
arch=('x86_64' 'aarch64')
url="https://github.com/pawpair/paw-mail-cli"
license=('MIT')
provides=('mail-cli')
conflicts=('mail-cli')

_base_url="https://paw-mail-releases.pawpair.pet/v${pkgver}"

source_x86_64=("${_base_url}/mail-cli-x86_64-linux.tar.gz")
source_aarch64=("${_base_url}/mail-cli-aarch64-linux.tar.gz")

sha256sums_x86_64=('e3b0c44298fc1c149afbf4c8996fb92427ae41e4649b934ca495991b7852b855')
sha256sums_aarch64=('e3b0c44298fc1c149afbf4c8996fb92427ae41e4649b934ca495991b7852b855')

package() {
    install -Dm755 mail-cli "${pkgdir}/usr/bin/mail-cli"
}
