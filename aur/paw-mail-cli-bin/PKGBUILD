# Maintainer: pawpair <packages@pawpair.com>
pkgname=paw-mail-cli-bin
pkgver=0.1.0-alpha.2
pkgrel=1
pkgdesc="Command-line interface for the Paw Mail email client"
arch=('x86_64' 'aarch64')
url="https://github.com/pawpair/paw-mail-cli"
license=('MIT')
provides=('paw-mail-cli')
conflicts=('paw-mail-cli')

_base_url="https://paw-mail-releases.pawpair.pet/v${pkgver//_/-}"

source_x86_64=("${_base_url}/paw-mail-cli-x86_64-linux.tar.gz")
source_aarch64=("${_base_url}/paw-mail-cli-aarch64-linux.tar.gz")

sha256sums_x86_64=('1885f654c1fb43d3605f8933121d603c1aeba454819f923d721f1209a47be732')
sha256sums_aarch64=('0d4eab5e90376a972a6b37b56e7d51e6ed7d50b8c1209a3a98b1e644ec7344f0')

package() {
    install -Dm755 paw-mail-cli "${pkgdir}/usr/bin/paw-mail-cli"
}
