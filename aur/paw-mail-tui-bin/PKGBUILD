pkgname=paw-mail-tui-bin
pkgver=0.1.0-alpha.3
pkgrel=1
pkgdesc="Terminal UI for the Paw Mail email client"
arch=('x86_64' 'aarch64')
url="https://github.com/pawpair/paw-mail-cli"
